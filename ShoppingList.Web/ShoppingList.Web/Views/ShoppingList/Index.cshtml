@model IEnumerable<ShoppingList.Models.ShoppingListViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Shopping Lists</h2>

<p class="table">
    @Html.ActionLink("Create New", "Create")
</p>

<hr style="border: 1px solid black" />

<table class="table">
    <tr style="background-color: #ffcc99; border: 1px solid black;">
        <th style="border: 1px solid black; text-align: center" class="col-sm-10">
            @Html.DisplayNameFor(model => model.ListName)
        </th>
        <th style="border: 1px solid black; text-align: center" class="col-sm-2">
            Options
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ListName, "Index", "ShoppingListItem", new { id = item.ListId }, null)
            </td>
            <td>
                <div class="btn-group btn-group-xs">
                        <button type="button">@Html.ActionLink("Show", "Index", "ShoppingListItem", new { id = item.ListId }, null)</button>
                        <button type="button">@Html.ActionLink("Delete", "Delete", new { id = item.ListId })</button>
                </div>
            </td>
        </tr>
    }
</table>
